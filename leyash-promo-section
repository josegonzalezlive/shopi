<script>
document.addEventListener('DOMContentLoaded', function() {
    // Para evitar que el script se rompa si este elemento no existe en la p√°gina
    const timerWrapper = document.getElementById('leyash-timer-wrapper');
    if (!timerWrapper) {
        return;
    }

    // --- CONFIGURACI√ìN DEL TEMPORIZADOR ---
    // Modifica estos valores para cambiar la duraci√≥n de la cuenta regresiva.
    const countdownHours = 1;   // Horas para la cuenta regresiva
    const countdownMinutes = 0; // Minutos adicionales
    const countdownSeconds = 0; // Segundos adicionales
    // ------------------------------------

    const countdownDuration = (countdownHours * 3600 + countdownMinutes * 60 + countdownSeconds) * 1000;
    const endTime = new Date().getTime() + countdownDuration;

    const daysEl = document.getElementById('countdown-days');
    const hoursEl = document.getElementById('countdown-hours');
    const minutesEl = document.getElementById('countdown-minutes');
    const secondsEl = document.getElementById('countdown-seconds');
    const activeTimerEl = document.getElementById('timer-active');
    const expiredMessageEl = document.getElementById('timer-expired');

    const timerInterval = setInterval(updateCountdown, 1000);

    function updateCountdown() {
        const now = new Date().getTime();
        const distance = endTime - now;

        if (distance < 0) {
            clearInterval(timerInterval);
            activeTimerEl.style.display = 'none';
            expiredMessageEl.style.display = 'block';
            return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Actualiza el HTML con el formato de dos d√≠gitos (ej: 09, 08, 07)
        daysEl.innerHTML = String(days).padStart(2, '0');
        hoursEl.innerHTML = String(hours).padStart(2, '0');
        minutesEl.innerHTML = String(minutes).padStart(2, '0');
        secondsEl.innerHTML = String(seconds).padStart(2, '0');
    }
});
</script>
