  }

  .icon-wrapper .material-symbols-outlined {
    font-size: 26px;
    color: var(--feature-list-primary-color);
  }

  /* --- MEJORA: Jerarquía de Texto (Título y Descripción) --- */
  .text-content {
    display: flex;
    flex-direction: column;
    gap: 2px; /* Pequeño espacio entre título y descripción */
  }

  .item-heading {
    font-size: 16px;
    font-weight: 600; /* Más grueso para el título */
    color: var(--feature-list-text-dark);
    line-height: 1.4;
  }
  
  .item-description {
    font-size: 14px;
    color: var(--feature-list-text-light);
    line-height: 1.5;
  }

</style>

